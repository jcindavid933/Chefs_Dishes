@model Chef
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Chefs & Dishes</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/style.css"/>
  </head>
  <body>
    <div class="container">
        <h1>Add a Chef!</h1>
        <a href="/">Home</a><br><br>
        <form asp-action="Create_chef" asp-controller="Home" method="post">
            <div class="left">
                <div class="form-group">
                    <label asp-for="first_name">First Name</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="first_name">
                    <span asp-validation-for="first_name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="last_name">Last Name</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="last_name">
                    <span asp-validation-for="last_name"></span>
                </div>
            </div>
            <div class="right">
                <div class="form-group">
                    <label asp-for="DOB">Date of Birth</label>
                    <input type="date" class="form-control" id="exampleFormControlInput1" asp-for="DOB"><br><br>
                    <span asp-validation-for="DOB"></span>
                    <button type="submit" class="btn btn-primary">Add Chef</button>
                </div>
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
